{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "lib": [
            "es6"
        ],
        "esModuleInterop": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src",
        "api",
        "src/types/index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}